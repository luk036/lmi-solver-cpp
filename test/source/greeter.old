#include <lmisolver/greeter.h>
#include <lmisolver/version.h>
#include <doctest/doctest.h>

#include <string>

TEST_CASE("undefined behavior") {
    int a = 125;
    int c = 32;
    [[maybe_unused]] int b = a >> c;  // see if your tool can catch the problem
    // std::cout << "125 >> 32 = " << b << "\n";
}

TEST_CASE("LmiSolver version") {
    static_assert(std::string_view(LMISOLVER_VERSION) == std::string_view("1.0"));
    CHECK(std::string(LMISOLVER_VERSION) == std::string("1.0"));
}
